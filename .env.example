# Firebase設定
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=000000000000
NEXT_PUBLIC_FIREBASE_APP_ID=1:000000000000:web:xxxxxxxxxxxxxxxx

# Stripe設定
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# サイト設定
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_OG_DEFAULT=/og-default.png
NEXT_PUBLIC_CONTACT_EMAIL=you@example.com

# AI設定
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-flash
OPENAI_API_KEY=your_openai_api_key

# メール設定（オプション）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# 外部API設定（オプション）
OPENAI_API_KEY=your_openai_api_key
GOOGLE_ANALYTICS_ID=your_ga_id

# ファイルアップロード設定
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# キャラクター設定
NEXT_PUBLIC_DEFAULT_CHARACTER=live2d
NEXT_PUBLIC_CHARACTERS_BASE_URL=/models/characters

# 3Dモデル設定
NEXT_PUBLIC_MODELS_BASE_URL=/models/3d
NEXT_PUBLIC_TEXTURES_BASE_URL=/textures

# 開発環境設定
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
