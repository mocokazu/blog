# Stripe設定
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# アプリケーション設定
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=個人ブログ・ポートフォリオサイト

# 認証設定
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# メール設定（オプション）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# 外部API設定（オプション）
OPENAI_API_KEY=your_openai_api_key
GOOGLE_ANALYTICS_ID=your_ga_id

# ファイルアップロード設定
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# キャラクター設定
NEXT_PUBLIC_DEFAULT_CHARACTER=live2d
NEXT_PUBLIC_CHARACTERS_BASE_URL=/models/characters

# 3Dモデル設定
NEXT_PUBLIC_MODELS_BASE_URL=/models/3d
NEXT_PUBLIC_TEXTURES_BASE_URL=/textures

# 開発環境設定
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
