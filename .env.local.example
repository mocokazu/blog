###############################################
# ローカル開発用 環境変数テンプレート (.env.local)
# 実運用: Gemini を既定、OpenAI は任意。フロント側のモデル選択が優先されます。
###############################################

# サイト設定
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_OG_DEFAULT=/og/og-default.png
NEXT_PUBLIC_CONTACT_EMAIL=

# Firebase（Public Web SDK）
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# AI設定
# GEMINI_MODEL は gemini-2.5-flash / gemini-2.5-flash-lite を指定可能（フロントの選択が優先）
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash
# 任意: OpenAI（必要時のみ設定）
OPENAI_API_KEY=

# ファイルアップロード設定
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# キャラクター設定（任意）
NEXT_PUBLIC_DEFAULT_CHARACTER=live2d
NEXT_PUBLIC_CHARACTERS_BASE_URL=/models/characters

# 3Dモデル設定（任意）
NEXT_PUBLIC_MODELS_BASE_URL=/models/3d
NEXT_PUBLIC_TEXTURES_BASE_URL=/textures

# 開発環境設定
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
